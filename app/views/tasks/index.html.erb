<% if @tasks.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Task Name</th>
        <th>Category</th>
        <th>Priority</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, task_path(task) %></td>
          <td><%= task.category %></td>
          <td><%= task.priority %></td>
          <td><%= task.status %></td>
          <td>
            <%= link_to "Edit", edit_task_path(task), class: 'btn btn-outline-primary' %>
            <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No tasks found.</p>
<% end %>

<%= link_to "New Task", new_task_path, class: "btn btn-secondary" %>

<% unless @tasks.any? %>
  <h1>Hello world</h1>
  <p>This is the task app.</p>
<% end %>
