<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center">
      <h1>Editing Task</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= render "form", task: @task %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-8 offset-md-2 text-center">
      <%= link_to "Show", @task, class: "btn btn-dark" %>
      <%= link_to "Back", tasks_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>
